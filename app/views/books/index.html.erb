<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>リーダブルコード</td>
        <td>より良いコードを書くためのシンプルで実践的なテクニック</td>
        <td><a class="show_96894" href="/books/96894">Show</a></td>
        <td><a class="edit_96894" href="/books/96894/edit">Edit</a></td>
        <td><a data-confirm="Are you sure?" class="destroy_96894" rel="nofollow" data-method="delete" href="/books/96894">Destroy</a></td>
      </tr>

      <span>
        <%= link_to book.title, book_path(book.id) %>
      </span>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
 <h4>Body</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
<% end %>
